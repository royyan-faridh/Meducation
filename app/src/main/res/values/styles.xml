<resources>
    <!-- Custom Text Appearance -->
    <style name="TextAppearance.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <!-- Button Style -->
    <style name="Button.Primary">
        <item name="android:background">@color/primary_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- EditText Style -->
    <style name="EditTextStyle">
        <item name="android:background">@drawable/input_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="TextAppearance">TextAppearance</style>

    <style name="Button">Button</style>

    <style name="Theme.Meduction.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Widget.Theme.Meduction.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Meduction.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
</resources>