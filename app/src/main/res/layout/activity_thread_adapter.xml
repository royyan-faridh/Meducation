<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="@drawable/rounded_edittext"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <!-- Judul Thread -->
    <TextView
        android:id="@+id/tvThreadTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Judul Thread"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Kontainer untuk Penulis dan Tanggal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <!-- Author -->
        <TextView
            android:id="@+id/tvThreadAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dibuat oleh: Penulis"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <!-- Tanggal -->
        <TextView
            android:id="@+id/tvThreadDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Posting"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
