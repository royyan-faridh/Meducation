<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:paddingBottom="8dp"
            android:text="Masuk"
            android:textSize="34sp"
            android:textStyle="bold" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="16dp"
            android:text="Akses informasi kesehatan reproduksi dan seksual dengan akun Anda"
            android:textSize="11sp"
            tools:ignore="RtlHardcoded" />

        <!-- Image Placeholder -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/login"/>

        <!-- Username/Email Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Username/Email"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Username/Email Input -->
        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/input_background"
            android:hint="Masukkan Username/Email"
            android:padding="12dp" />

        <!-- Password Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Password Input -->
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/input_background"
            android:hint="Masukkan Password"
            android:inputType="textPassword"
            android:padding="12dp" />

        <!-- Forgot Password Link -->
        <TextView
            android:id="@+id/lupa_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="end"
            android:text="Lupa Password" />

        <!-- Login Button -->
        <Button
            android:id="@+id/btnlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF4081"
            android:focusable="true"
            android:clickable="true"
            android:text="Masuk"
            android:textColor="@android:color/white" />

        <!-- Social Media Sign-in -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="atau masuk dengan" />

        <!-- Social Media Icons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_google"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="8dp"
                android:src="@drawable/google"/>

            <ImageView
                android:id="@+id/icon_IOS"
                android:layout_margin="8dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ios"/>

            <ImageView
                android:id="@+id/icon_facebook"
                android:layout_margin="8dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/facebook"/>

        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- Register Link -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/belum_mempunyai_akun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="belum mempunyai akun?" />

            <TextView
                android:id="@+id/txtDaftar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="Daftar" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
